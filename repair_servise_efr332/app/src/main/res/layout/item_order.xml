<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:Android="http://schemas.android.com/tools">

        <!-- Скролл с заголовками -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvOrderNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="№ заказа"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Дата"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvEquipment"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Оборудование"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvFaultType"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Тип неисправности"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWorkerNumber"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="№ работника"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Статус"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Комментарий"
                    android:gravity="center" />

            </LinearLayout>
        </HorizontalScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:text="Создать заявку"
        android:textSize="16sp"
        Android:layout_editor_absoluteX="85dp"
        Android:layout_editor_absoluteY="538dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="242dp"
        android:layout_height="52dp"
        android:text="Удалить заявку"
        android:textSize="16sp"
        Android:layout_editor_absoluteX="85dp"
        Android:layout_editor_absoluteY="661dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="242dp"
        android:layout_height="50dp"
        android:text="Редактировать заявку"
        android:textSize="16sp"
        Android:layout_editor_absoluteX="85dp"
        Android:layout_editor_absoluteY="598dp" />

</androidx.constraintlayout.widget.ConstraintLayout>